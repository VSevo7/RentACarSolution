@model RentACar.Models.Reservation

@{
    ViewData["Title"] = "Rezervacija automobila";
}

<h2 class="text-center">Rezervacija automobila</h2>

<div class="container">
    <form asp-controller="Car" asp-action="ReserveConfirm" method="post">
        <input type="hidden" name="id" value="@Model.CarId" />

        <div class="row">
            <div class="col-md-6">
                <label for="startDate" class="form-label">Datum početka:</label>
                <input type="date" id="startDate" name="startDate" class="form-control" required />
            </div>
            <div class="col-md-6">
                <label for="endDate" class="form-label">Datum završetka:</label>
                <input type="date" id="endDate" name="endDate" class="form-control" required />
            </div>
        </div>

        <div class="row mt-4 text-center">
            <div class="col-md-12">
                <button type="submit" class="btn btn-success">Potvrdi rezervaciju</button>
                <a asp-action="Index" class="btn btn-secondary">Odustani</a>
            </div>
        </div>
    </form>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const startDate = document.getElementById("startDate");
        const endDate = document.getElementById("endDate");

        startDate.addEventListener("change", function () {
            endDate.min = startDate.value;
        });
    });
</script>
